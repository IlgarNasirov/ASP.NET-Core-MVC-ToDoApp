@model List<ToDoApp.Data.Models.Todo>
@{
    ViewData["Title"] = "Index";
}
<h1 class="mt-5" style="text-align:center;">Welcome to your ToDo page!</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2>ToDo list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ToDo" asp-action="Create" class="btn btn-primary">
             Create new ToDo
            </a>
        </div>
    </div>
    <br/>
    <br/>
    <span class="text-warning">@TempData["error"]</span>
    <br/>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Your ToDo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
            @foreach (var obj in Model)
            {
                  <tr>
                    <td width="80%">
                        @obj.Text
                    </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                             <a asp-controller="ToDo" asp-action="Edit" asp-route-id="@obj.Id"
                         class="btn btn-primary mx-2">Edit</a>
                             <a asp-controller="ToDo" asp-action="Delete" asp-route-id="@obj.Id"
                         class="btn btn-danger mx-2">Delete</a>
                            </div>
                        </td>
                  </tr>
            }
    </tbody>
</table>
    </div>
    <a asp-controller="ToDo" asp-action="Logout" class="btn btn-dark">Logout</a>